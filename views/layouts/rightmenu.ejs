
<div id="carouselExampleIndicators" id="mySlider" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="0" class="active" aria-current="true"
                        aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner" style="height:30rem;">
                  <div class="carousel-item active">
                        <img src="img/1-2-ecommerce-png.png" class="d-block w-100" alt="...">
                  </div>

                  <div class="carousel-item">
                        <img src="/img/resim.jpeg" class="d-block w-100" alt="...">
                  </div>

                  <div class="carousel-item">
                        <img src="/img/negatif-dusuncelerden-nasil-uzak-durabilirim.jpg"
                              class="d-block w-100" alt="...">
                  </div>

            </div>
            <button class="carousel-control-prev" type="button"
                  data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button"
                  data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
            </button>
</div>


<div class="row">
     
      <% if(products.length > 0) { %>

      <% products.forEach((product) => { %>
      
            <div class="col-md-4">
                  <div class="card my-3">
                        <img src="/img/<%= product.imageUrl %> "
                              class="card-img-top" alt="...">
                        <div class="card-body">
                              <h5 class="card-title">
                                    <a href="#"><%= product.name %></a>    
                                    </h5>
                              <p class="card-text"><%= product.description %> </p>
            
                        </div>
            
                        <div class="card-footer">
                              <small style="font-weight: bolder;">
                                    <i class="fas fa-lira-sign"></i>  <%= product.price %> TL 
                              </small>
                              <a href="#" class="btn btn-dark btn-sm float-end">
                                    Details
                              </a>
                        </div>
                  </div>
            
            </div>
            
            <%     }) %>
      
      <%  }  else { %> 
            <div class="col-md-4 mt-4">
                  <h2>Görüntülenecek ürün yok</h2>
            </div>

      <%  } %>
</div>